CC =			gcc

CFLAGS = 		-Wall -pedantic -ansi -g -m32 -I/Developer/FMOD\ Programmers\ API\ Mac/api/inc
LDFLAGS =		-m32 -framework GLUT -framework OpenGL -framework Cocoa

GTK_CFLAGS = 	`pkg-config --libs --cflags gtk+-2.0`
GTK_LDFLAGS = 	

SRC_DIR = 		src
OBJ_DIR = 		obj
BIN_DIR = 		bin
EXEC = 			Stellody
SRCS = 			stellody.c analyzed_track.c analyzed_tracks.c
OBJS = 			$(SRCS:%.c=$(OBJ_DIR)/%.o)

all  : $(EXEC)

$(EXEC) : $(OBJS)
	@echo ""
	$(CC) $(LDFLAGS) $(GTK_LDFLAGS) $^ -o $(BIN_DIR)/$@

$(OBJ_DIR)/%.o : $(SRC_DIR)/%.c
	$(CC) -c $(CFLAGS) $(GTK_CFLAGS) $< -o $@

.PHONY: clean mrproper help

clean :
	@rm -fv $(OBJ_DIR)/*.o

mrproper :
	@rm -fv $(OBJ_DIR)/*.o
	@rm -fv $(BIN_DIR)/$(EXEC)

help :
	@echo
	@echo "                    <-=  AIDE  =->"
	@echo
	@echo "Voici les cibles que vous pouvez appeler :"
	@echo "    - make [all]      Construit l'ex√©cutable et d√©truit les fichiers objets"
	@echo "    - make Stellody   Construit l'ex√©cutable"
	@echo "    - make clean      D√©truit les fichiers objets"
	@echo "    - make mrproper   D√©truit tout ce qui peut √™tre reconstruit"
	@echo "    - make help       Affiche cette page d'aide"
	@echo

